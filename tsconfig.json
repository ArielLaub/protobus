{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": false,
        "skipLibCheck": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "lib": ["es2016", "es6", "dom"],
        "baseUrl": "./lib",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        },
        "typeRoots": ["./node_modules/@types"],
        "types": ["node", "jest"]
    },
    "include": [
        "lib/**/*",
        "test/**/*",
        "./index.ts"
    ]
}